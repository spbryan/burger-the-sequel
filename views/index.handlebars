                        {{this.burger_name}}
                        <button class="delete-burger" data-id="{{id}}">
                            Poo-Da-Burger
                        </button>
                    </li>
                    {{/if}}
                    {{/each}}
                </ul> --}}
            </div>
        </div>
    </section>
</section>